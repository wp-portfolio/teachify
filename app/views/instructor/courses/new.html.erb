<div class="booyah-box col-10 offset-1">
  <h1>Add a new course</h1>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title, placeholder: 'Example: Calculus Made Easy - 101' %>
    <%= f.input :description, placeholder: 'Example: Master the fundamentals: Limits & Derivatives ' %>
    <%= f.input :cost, placeholder: 'Minimum is 0, ex: entering 5 means your course will cost $5.00'%>
    <br />
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>